<?xml version="1.0" encoding="UTF-8"?>
<forms xmlns="http://ofbiz.apache.org/Widget-Form">
    <form name="MasterTableCreateForm" type="single" target="createMasterTable">
        <!-- We have this utility in OFBiz to render form based on service definition.
            Service attributes will automatically lookedup and will be shown on form
       -->
        <auto-fields-service service-name="createMasterTable"/>
        <field name="masterTableTypeId" title="${uiLabelMap.CommonType}">
            <drop-down allow-empty="false" current-description="">
                <!--                    creating a dynamic drop down option from db-->
                <entity-options description="${description}" key-field-name="masterTableTypeId" entity-name="masterTableType">
                    <entity-order-by field-name="description"/>
                </entity-options>
            </drop-down>
        </field>
        <field name="submitButton" title="${uiLabelMap.CommonAdd}"><submit button-type="button"/></field>
    </form>

    <form name="FindMasterTable" type="single" target="FindMasterTable" default-entity-name="masterTable">
        <field name="noConditionFind"><hidden value="Y"/><!-- if this isn't there then with all fields empty no query will be done i.e. all the records will be visible--></field>
        <field name="masterTableId" title="${uiLabelMap.masterTableId}"><text-find/></field>
        <field name="firstName" title="${uiLabelMap.masterTableFirstName}"><text-find/></field>
        <field name="lastName" title="${uiLabelMap.masterTableLastName}"><text-find/></field>
        <field name="masterTableTypeId" title="${uiLabelMap.masterTableType}">
            <drop-down allow-empty="true" current-description="">
                <entity-options entity-name="masterTableType" key-field-name="masterTableTypeId" description="${description}">
                    <entity-order-by field-name="description"/>
                </entity-options>
            </drop-down>
        </field>
        <field name="searchButton" title="${uiLabelMap.CommonFind}" widget-style="smallSubmit"><submit button-type="button" image-location="/images/icons/magnifier.png"/></field>

    </form>

    <form name="ListMasterTable" type="list" list-name="listIt" paginate-target="FindMasterTable" default-entity-name="MasterTable" separate-columns="true" odd-row-style="alternate-row" header-row-style="header-row-2" default-table-style="basic-table hover-bar">
        <actions>
            <!--        Preparing search results for user query by using OFBiz stock service to perform find operation on a single or view entity-->
            <!--            <service service-name="performFind" result-map="result" result-map-list="listIt">-->
            <!--                <field-map field-name="inputFields" from-field="HotWax-Systems-TrainingCtx"/>-->
            <!--                <field-map field-name="entityName" value="MasterTable"/>-->
            <!--                <field-map field-name="orderBy" from-field="parameters.sortField"/>-->
            <!--                <field-map field-name="viewIndex" from-field="viewIndex"/>-->
            <!--                <field-map field-name="viewSize" from-field="viewSize"/>-->
            <!--            </service>-->
        </actions>
        <field name="masterTableId" title="${uiLabelMap.MasterTableId}"><display/></field>
        <field name="masterTableTypeId" title="${uiLabelMap.MasterTableType}"><display-entity entity-name="masterTableType"/></field>
        <field name="firstName" title="${uiLabelMap.MasterTableFirstName}" sort-field="true"><display/></field>
        <field name="lastName" title="${uiLabelMap.MasterTableLastName}" sort-field="true"><display/></field>
        <field name="comments" title="${uiLabelMap.MasterTableComment}"><display/></field>
    </form>
</forms>